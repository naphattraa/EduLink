<style>
@import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');
</style>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>EduLink</title>
</head>
<body class="h-screen flex justify-center items-center">
    <nav class="navbar">
    <div class="nav-left">
        <h1 class="title">EduLink</h1>
    </div>
    <div class="nav-right">
        <a href="/login">
            <button class="login">Login</button>
        </a>
        <a href="/register">
            <button class="register">Register</button>
        </a>
    </div>
</nav>
        <div class ="flex-col flex justify-center w-1/3">
            <div class="justify-center flex text-[30px] font-extrabold">
                Login 
            </div>
            <form action="/auth/login" method="POST">
                <div class="card-body mt-4 space-y-3">
                    <div class="form-group">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control rounded-xl" id="email" name="email">
                    </div>

                    <div class="form-group">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control rounded-xl" id="password" name="password">
                    </div>
            
                    <div class="flex justify-end">Forgot Password?</div>
                    
                    
                    <button type="submit" class="bg-[#CEF0FF] w-full px-4 mt-3 h-7 rounded-xl">LOGIN</button>
                    
                    
                    <div class="flex justify-center">Do not have an account? &nbsp;
                        <a class="text-sky-600" href="/register">Signup</a>
                    </div>
                </div>
            </form>
            {{#if message}}
                <h4 class="" alert alert-danger mt-4>{{message}}</h4>

            {{/if}}
        </div>
</body>
</html>